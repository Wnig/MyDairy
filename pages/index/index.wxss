/**index.wxss**/
.my-smile {
	width: 75%;
  /* height: 440rpx; */
  margin: 20% auto;
  padding-top: 15%;
}
.smiles {
  height: 440rpx;
}
.smile {
	position: relative;
  width: 70%;
  height: 150rpx;
  margin: 0 auto 466rpx;
}
.smile .eye-left {
	float: left;
  width: 40rpx;
  height: 52rpx;
  margin-left: 50rpx;
  border-radius: 50%;
  background-color: #ededed;
  animation: blink 1s ease-in-out infinite;
}
.smile .eye-right {
	float: right;
  width: 40rpx;
  height: 52rpx;
  margin-right: 50rpx;
  border-radius: 50%;
  background-color: #ededed;
  animation: blink 1s ease-in-out infinite;
}
.smile .lip {
	position: absolute;
  left: 0;
  bottom: 0;
  width: 94%;
  height: 75rpx;
  margin-top: 30rpx;
  border-top: 12rpx solid transparent;
  border-left: 12rpx solid #ededed;
  border-right: 12rpx solid #ededed;
  border-bottom: 12rpx solid #ededed;
  border-radius: 50%;
}
.add {
	position: relative;
  width: 82.71rpx;
  height: 82.71rpx;
  margin: 0 auto;
  padding: 5%;
  border-radius: 9px;
  background-color: #ffc125;
  animation: float 2s ease-in-out infinite;
}
.add .thr {
	position: absolute;
  left: 50%;
  margin-left: -11rpx;
  bottom: -17rpx;
  border-top: 11rpx solid #ffc125;
  border-left: 11rpx solid transparent;
  border-right: 11rpx solid transparent;
  border-bottom: 11rpx solid transparent;
}
.add-con {
	position: relative;
  width: 83rpx;
  height: 83rpx;
}
.col {
	position: absolute;
  top: 0;
  left: 48%;
  width: 1px;
  height: 100%;
  background-color: #fff;
}
.row {
	position: absolute;
  top: 40rpx;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #fff;
}

/*眨眼睛*/
@keyframes blink {
	0% {
		transform: scaleY(1);
		-moz-transform: scaleY(1);
		-ms-transform: scaleY(1);
		-o-transform: scaleY(1);
	}
	100% {
		transform: scaleY(0.5);
		-moz-transform: scaleY(0.5);
		-ms-transform: scaleY(0.5);
		-o-transform: scaleY(0.5);
	}
}
/*浮动*/
@keyframes float {
	0% {
		-webkit-transform: translateY(10px);
		-moz-transform: translateY(10px);
		-ms-transform: translateY(10px);
		-o-transform: translateY(10px);
	}
	50% {
		-webkit-transform: translateY(-10px);
		-moz-transform: translateY(-10px);
		-ms-transform: translateY(-10px);
		-o-transform: translateY(-10px);
	}
	100% {
		-webkit-transform: translateY(10px);
		-moz-transform: translateY(10px);
		-ms-transform: translateY(10px);
		-o-transform: translateY(10px);
	}
}