/* pages/note/note.wxss */
.essay {
	padding: 0 8% 56rpx 8%;
}
.header {
	height: 56rpx;
	padding: 24rpx 0;
}
.header .time {
	float: left;
	line-height: 56rpx;
	color: #ededed;
	font-size: 40rpx;
}

.essay-con {
	margin-bottom: 80rpx;
}

/*笑脸*/
.smile-ico {
	position: relative;
	width: 130rpx;
	height: 68rpx;
}
.smile-ico .eye-left {
	float: left;
	width: 25rpx;
	height: 25rpx;
	margin-left: 25rpx;
	border-radius: 40rpx;
	background-color: #ededed;
}
.smile-ico .eye-right {
	float: right;
	width: 25rpx;
	height: 25rpx;
	margin-right: 25rpx;
	border-radius: 40rpx;
	background-color: #ededed;
	animation: blink 1.5s ease-in-out infinite;
	-moz-animation: blink 1.5s ease-in-out infinite;
	-ms-animation: blink 1.5s ease-in-out infinite;
	-o-animation: blink 1.5s ease-in-out infinite;
}
.smile-ico .lip {
	position: absolute;
	left: 0;
	bottom: 0;
	width: 90%;
	height: 30rpx;
	margin-top: 5rpx;
	border-top: 8rpx solid transparent;
	border-left: 8rpx solid #ededed;
	border-right: 8rpx solid #ededed;
	border-bottom: 8rpx solid #ededed;
	border-radius: 50%;
}

/*眨眼睛*/
@keyframes blink {
	0% {
		-webkit-transform: scaleY(1);
		-moz-transform: scaleY(1);
		-ms-transform: scaleY(1);
		-o-transform: scaleY(1);
	}
	100% {
		-webkit-transform: scaleY(0.5);
		-moz-transform: scaleY(0.5);
		-ms-transform: scaleY(0.5);
		-o-transform: scaleY(0.5);
	}
}
